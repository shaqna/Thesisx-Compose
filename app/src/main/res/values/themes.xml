<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Thesisx" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>

        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="searchViewStyle">@style/SearchTheme</item>
    </style>

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/thesis_logo</item>
        <item name="windowSplashScreenAnimationDuration">600</item>
        <item name="postSplashScreenTheme">@style/Theme.Thesisx</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/range_16</item>
        <item name="android:paddingStart">@dimen/range_24</item>
        <item name="android:paddingEnd">@dimen/range_24</item>
    </style>

    <style name="ButtonStyle16" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">100dp</item>
        <item name="backgroundColor">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/range_12</item>
        <item name="android:paddingBottom">@dimen/range_12</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle16.NoCorner" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/range_12</item>
        <item name="android:paddingBottom">@dimen/range_12</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ButtonStyle16.White" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/range_12</item>
        <item name="android:paddingBottom">@dimen/range_12</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle14" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle12" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyleWhite12" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="borderWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InterSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="InterMedium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="InterReguler" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@drawable/rounded_search_view</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

</resources>